{
  "extends": ["development"],
  "hints": {
    "axe/language": [
      "default",
      {
        "html-has-lang": "off",
      },
    ],
    "axe/forms": [
      "default",
      {
        "label": "off",
      },
    ],
    "meta-viewport": "off",
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off",
      },
    ],
    "no-inline-styles": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "backdrop-filter",
          "scrollbar-width",
          "scrollbar-width: none",
        ],
      },
    ],
  },
}
